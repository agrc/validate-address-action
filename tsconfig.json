{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "target": "ES2022",
    "lib": [
      "dom",
      "ES2022"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
